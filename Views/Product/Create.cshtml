@model CartManagementMVC.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create New Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Product Type</label>
        <input asp-for="ProductType" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Active</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save Product</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to List</a>
</form>
