@model List<CartManagementMVC.Models.Cart>

<h2>Your Cart</h2>
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>
                <!-- ✅ Update Quantity Form -->
                <form asp-action="UpdateCartQuantity" method="post">
                    <input type="hidden" name="productId" value="@item.ProductId" />
                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" />
                    <button type="submit" class="btn btn-warning">Update</button>
                </form>
            </td>
            <td>
                <!-- ✅ Remove from Cart Button -->
                <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ProductId })" class="btn btn-danger">Remove</a>
            </td>
        </tr>
    }
</table>

<!-- ✅ Continue Shopping Button -->
<a href="@Url.Action("Index", "Product")" class="btn btn-primary">Continue Shopping</a>
